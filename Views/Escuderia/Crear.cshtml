@model FormulaUnoObligatorio.Models.Escuderia

<h2 class="text-center">Crear Nueva Escuderia</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear" aria-labelledby="form-title">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="NombreEscuderia" class="control-label"></label>
                <input asp-for="NombreEscuderia" class="form-control" aria-required="true" aria-describedby="nombreHelp" />
                <span asp-validation-for="NombreEscuderia" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="SponsorOficial" class="control-label"></label>
                <input asp-for="SponsorOficial" class="form-control" aria-describedby="sponsorHelp" />
                <span asp-validation-for="SponsorOficial" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PaisEscuderia" class="control-label"></label>
                <input asp-for="PaisEscuderia" class="form-control" aria-required="true" aria-describedby="paisHelp" />
                <span asp-validation-for="PaisEscuderia" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




