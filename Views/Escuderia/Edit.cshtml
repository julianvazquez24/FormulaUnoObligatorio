@model FormulaUnoObligatorio.Models.Escuderia

<h2 class="text-center">Editar Escuderia</h2>
<hr />
<form asp-action="Edit">
    <div class="form-group mb-3">
        <label asp-for="NombreEscuderia" class="form-label fw-bold"></label>
        <input asp-for="NombreEscuderia" class="form-control" />
        <span asp-validation-for="NombreEscuderia" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SponsorOficial" class="form-label fw-bold"></label>
        <input asp-for="SponsorOficial" class="form-control" />
        <span asp-validation-for="SponsorOficial" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PaisEscuderia" class="form-label fw-bold"></label>
        <input asp-for="PaisEscuderia" class="form-control" />
        <span asp-validation-for="PaisEscuderia" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver al Listado</a>
    </div>
</form>


