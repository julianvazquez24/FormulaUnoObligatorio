<div class="container my-5">
    <h1 class="text-center mb-4">Estadísticas</h1>

    <!-- Tabla de posiciones de pilotos -->
    <h2 class="mt-4">Tabla de Posiciones de Pilotos</h2>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>País</th>
                <th>Puntos Totales</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.TablaPosicionesPilotos != null && ViewBag.TablaPosicionesPilotos.Count > 0)
            {
                foreach (var piloto in ViewBag.TablaPosicionesPilotos)
                {
                    <tr>
                        <td>@piloto.NombrePiloto</td>
                        <td>@piloto.PaisPiloto</td>
                        <td>@piloto.PuntajePiloto</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>



<!--Tabla de Posiciones de Escuderías-->
    <h2 class="mt-5">Tabla de Posiciones de Escuderías</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Posición</th>
                <th>Escudería</th>
                <th>Puntos Totales</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.TablaPosicionesEscuderias != null && ViewBag.TablaPosicionesEscuderias.Count > 0)
            {
                int posicion = 1;
                
                foreach (var escuderia in ViewBag.TablaPosicionesEscuderias)
                {
                    <tr>
                        <td>@posicion</td>
                        <td>@escuderia.NombreEscuderia</td>
                        <td>@escuderia.PuntosTotales</td>
                    </tr>
                    posicion++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>

</div>
