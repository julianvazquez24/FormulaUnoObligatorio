@{
}

<h2 class="text-center">Crear Nuevo Resultado</h2>


<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear" aria-labelledby="form-title">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label for="IdPiloto">Piloto</label>
                <select id="IdPiloto" name="IdPiloto" class="form-control">
                    <option>Selecciona una opción</option>
                    @foreach (Piloto piloto in ViewBag.Pilotos)
                    {
                        @Html.Raw(piloto.AsOption(ViewBag.IdPiloto))
                    }
                </select>
            </div>
            

            <br />

            <br />

            <br />
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>