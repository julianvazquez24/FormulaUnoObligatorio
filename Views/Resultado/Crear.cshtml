<h2 class="text-center">Crear Nuevo Resultado</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear" aria-labelledby="form-title">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label>Carrera</label>
                <select class="form-control" asp-items="ViewBag.IdCarrera"></select>
            </div>

            <div class="form-group">
                <label>Piloto</label>
                <select class="form-control" asp-items="ViewBag.IdPilotos"></select>
            </div>

            <div class="form-group">
                <label>Posición de Salida</label>
                <select class="form-control">
                    @foreach (int posicion in ViewBag.PosicionesSalida)
                    {
                        <option value="@posicion">@posicion</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Posición de Llegada</label>
                <select class="form-control">
                    @foreach (int posicion in ViewBag.PosicionesLlegada)
                    {
                        <option value="@posicion">@posicion</option>
                    }
                </select>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>
