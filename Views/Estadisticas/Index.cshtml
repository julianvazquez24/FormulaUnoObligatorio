<div class="container my-5">
    <h1 class="text-center mb-4">Estadísticas</h1>

    <!-- Tabla de posiciones de pilotos -->
    <h2 class="mt-4">Tabla de Posiciones de Pilotos</h2>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>País</th>
                <th>Puntos Totales</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.TablaPosicionesPilotos != null && ViewBag.TablaPosicionesPilotos.Count > 0)
            {

                foreach (var piloto in ViewBag.TablaPosicionesPilotos)

                {
                    <tr>
                        <td>@piloto.NombrePiloto</td>
                        <td>@piloto.PaisPiloto</td>
                        <td>@piloto.PuntajePiloto</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Historial de carreras de un piloto -->
    <h2 class="mt-5">Historial de Carreras de un Piloto</h2>
    <button type="button" class="btn btn-outline-dark">Pilotos</button>
    <br />
    <table class="table table-bordered table-striped table-hover">
        <br />
        <thead class="table-dark">
            <tr>
                <th>Carrera</th>
                <th>Fecha</th>
                <th>Posición</th>
                <th>Puntos</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.HistorialDeCarrerasDeUnPiloto != null && ViewBag.HistorialDeCarrerasDeUnPiloto.Count > 0)
            {

                foreach (var carrera in ViewBag.HistorialDeCarrerasDeUnPiloto)

                {
                    <tr>
                        <td>@carrera.NombreCarrera</td>
                        <td>@carrera.FechaCarrera.ToShortDateString()</td>
                        <td>@carrera.PosicionCarrera</td>
                        <td>@carrera.PuntosCarrera</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>







    <!--Tabla de Posiciones de Escuderías-->
    <h2 class="mt-5">Tabla de Posiciones de Escuderías</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Posición</th>
                <th>Escudería</th>
                <th>Puntos Totales</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.TablaPosicionesEscuderias != null && ViewBag.TablaPosicionesEscuderias.Count > 0)
            {

                int posicion = 1;



                foreach (var escuderia in ViewBag.TablaPosicionesEscuderias)

                {
                    <tr>
                        <td>@posicion</td>
                        <td>@escuderia.NombreEscuderia</td>
                        <td>@escuderia.PuntosTotales</td>
                    </tr>
                    posicion++;

                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>




    <!--Historial de Carreras de una Escudería-->
    <h2 class="mt-5">Historial de Carreras de la Escudería</h2>

    <button type="button" class="btn btn-outline-dark">Escuderias</button>
    <br />
    <table class="table table-striped table-bordered">
        <br />
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Nombre de la Carrera</th>
                <th>Piloto</th>
                <th>Posición</th>
                <th>Puntaje</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.HistorialDeCarrerasDeUnaEscuderia != null && ViewBag.HistorialDeCarrerasDeUnaEscuderia.Count > 0)
            {

                foreach (var carrera in ViewBag.HistorialDeCarrerasDeUnaEscuderia)

                {
                    <tr>
                        <td>@carrera.NombreCarrera</td>
                        <td>@carrera.FechaCarrera.ToShortDateString()</td>
                        <td>@carrera.Piloto.NombrePiloto</td>
                        <td>@carrera.PosicionCarrera</td>
                        <td>@carrera.PuntosCarrera</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>


    <!--Carreras ganadas-->
    <h2 class="mt-5">Carreras Ganadas</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Posición</th>
                <th>Piloto</th>
                <th>Cantidad de Primeros Lugares</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.PilotosConMasPrimerosLugares != null && ViewBag.PilotosConMasPrimerosLugares.Count > 0)
            {

                int posicion = 1;

                foreach (var piloto in ViewBag.PilotosConMasPrimerosLugares)

                {
                    <tr>
                        <td>@posicion</td>
                        <td>@piloto.NombrePiloto</td>
                        <td>@piloto.PrimerosLugares</td>
                    </tr>
                    posicion++;

                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No hay datos disponibles</td>
                </tr>
            }
        </tbody>
    </table>
